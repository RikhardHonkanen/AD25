{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C Project",
      "type": "shell",
      "command": "sh",
      "options": {
        "cwd": "${fileDirname}"
      },
      "args": ["-c", "gcc -Wall -Wextra -g *.c -o program"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build C++ project",
      "type": "shell",
      "command": "C:/msys64/ucrt64/bin/g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++17",
        "-Wall",
        "-g",
        "${fileDirname}/*.cpp",
        "-o",
        "${fileDirname}/app.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"],
      "detail": "Builds all C++ files in the current directory."
    }
  ]
}
